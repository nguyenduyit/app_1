<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <EditText
            android:id="@+id/txtCode_Signup"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_border"
            android:hint="Your code"
            android:inputType="text"
            android:paddingLeft="20dp" />
        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_border"
            android:hint="Your Name"
            android:inputType="text"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/txtCourse_Signup"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_border"
            android:hint="Your course"
            android:inputType="none"
            android:paddingLeft="20dp" />

        <Spinner
            android:id="@+id/spinnerCourse"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:autofillHints="course"
            android:paddingLeft="30dp" />

        <EditText
            android:id="@+id/txtFaculty_Signup"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_border"
            android:hint="Your faculty"
            android:inputType="none"
            android:paddingLeft="20dp" />

        <Spinner
            android:id="@+id/spinnerFaculty"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:paddingLeft="30dp" />

        <EditText
            android:id="@+id/txtMajor_Signup"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_border"
            android:hint="Your major"
            android:paddingLeft="20dp"
            android:inputType="none"/>

        <Spinner
            android:id="@+id/spinnerMajor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="30dp" />

        <Button
            android:id="@+id/btnSignup_Signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Submit" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>